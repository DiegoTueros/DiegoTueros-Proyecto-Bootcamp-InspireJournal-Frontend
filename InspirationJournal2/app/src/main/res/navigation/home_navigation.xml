<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inspiration_detail"
    app:startDestination="@id/favoritesFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nttdata.inspirationjournal2.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_inspirationDetailFragment"
            app:destination="@id/inspirationDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/inspirationDetailFragment"
        android:name="com.nttdata.inspirationjournal2.view.inspirationdetail.InspirationDetailFragment"
        android:label="fragment_inspiration_detail"
        tools:layout="@layout/fragment_inspiration_detail" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.nttdata.inspirationjournal2.view.favorites.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_inspirationDetailFragment"
            app:destination="@id/inspirationDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.nttdata.inspirationjournal2.view.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>